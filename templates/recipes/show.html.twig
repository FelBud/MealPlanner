{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>Recipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.Name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.Picture }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ recipe.Category }}</td>
            </tr>
            <tr>
                <th>Servings</th>
                <td>{{ recipe.Servings }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ recipe.Price }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ recipe.Time }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted("ROLE_USER") %}
    <a href="{{ path('app_static') }}">back to list</a>
    {% endif %}

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_recipes_index') }}">back to list</a>
    <a href="{{ path('app_recipes_edit', {'id': recipe.id}) }}">edit</a>
    {{ include('recipes/_delete_form.html.twig') }}
     {% endif %}

{% endblock %}
