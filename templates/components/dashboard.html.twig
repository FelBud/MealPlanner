{% extends "base.html.twig" %} {% block body %}

<h1>Users</h1>
<hr> {% if is_granted("ROLE_ADMIN") %}

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Gender
            </th>
            <th>
                Picture
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        <!--Loop for all users-->

        {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.gender }}</td>
            <td><img src="{{asset('pictures/'~user.Picture)}}"></td>
            <td>
                <a href=""><button>Block</button></a>
                <a href="/{{user.id}}/edit"><button>Edit</button></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% else %}
<!--Only User{id} information-->
<table class="table">
    <thead>
        <th>Name</th>
        <th>Email</th>
        <th>Gender</th>
        <th>Picture</th>
        <th>Status</th>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tbody>
</table>
{% endif %}



