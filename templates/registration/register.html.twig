    <div class="form_div">
        <h1>Register</h1>

        {{ form_start(registrationForm) }} {{ form_row(registrationForm.email) }} {{ form_row(registrationForm.name) }} {{ form_row(registrationForm.gender) }} {{ form_row(registrationForm.picture) }} {{ form_row(registrationForm.plainPassword, { label: 'Password'
