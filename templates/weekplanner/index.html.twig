{% extends 'base.html.twig' %} {% block title %}Weekplanner index{% endblock %} {% block body %}


<h1 class="headings text-center">Weekplanner index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>WeekDay</th>
            <th>MealTime</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for weekplanner in weekplanners %}
        <tr>
            <td>{{ weekplanner.fkRecipes.name }}</td>
            {#
            <td>{{ weekplanner.date ? weekplanner.date|date('Y-m-d') : '' }}</td> #}
            <td>{{ weekplanner.weekday }}</td>
            <td>{{ weekplanner.mealTime }}</td>

            <td>
                {# <a href="{{ path('app_static_show', {'id': weekplanner.fkRecipes.id}) }}">show</a> #}
                <a href="/recipes/{{weekplanner.fkRecipes.id }}/show">show</a>
                <a href="/weekplanner/{{weekplanner.id}}/delete">delete</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="text-center"><a href="{{ path('app_static') }}" class="btn btn-outline-dark btnsize mt-2">Back</a></div> {# <a href="{{ path('app_weekplanner_new') }}">Create new</a> #} {% endblock %}